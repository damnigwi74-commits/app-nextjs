{
  "name": "ussd",
  "version": "7.3.0",
  "description": "Configurable USSD Engine v7",
  "scripts": {
    "docker": "moleculer-runner  services",
    "dev": "moleculer-runner --repl --hot --config moleculer.config.js services",
    "start": "moleculer-runner --instances 4 services",
    "ussd": "moleculer-runner --instances max services",
    "start-one": "moleculer-runner",
    "cli": "moleculer connect NATS",
    "ci": "jest --watch",
    "test": "jest --coverage",
    "lint": "eslint services",
    "dc:up": "docker-compose up --build -d",
    "dc:logs": "docker-compose logs -f",
    "dc:down": "docker-compose down"
  },
  "keywords": [
    "microservices",
    "moleculer"
  ],
  "author": "Moses Maru",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.25.0",
    "jest": "^27.5.1",
    "jest-cli": "^27.5.1",
    "moleculer-repl": "^0.7.3"
  },
  "dependencies": {
    "argon2-browser": "^1.18.0",
    "axios": "^1.3.5",
    "body-parser": "^1.20.2",
    "body-parser-xml": "^2.0.5",
    "comma-number": "^2.1.0",
    "cookie-parser": "^1.4.6",
    "crypto-js": "^4.1.1",
    "deepmerge": "^4.3.1",
    "dot-object": "^2.1.4",
    "dotenv": "^16.5.0",
    "fastest-validator": "^1.16.0",
    "flat": "^5.0.2",
    "helmet": "^6.1.5",
    "ioredis": "^5.3.2",
    "libphonenumber-js": "^1.10.28",
    "maskdata": "^1.2.2",
    "moleculer": "^0.14.26",
    "moleculer-web": "^0.10.4",
    "moment": "^2.29.4",
    "mongodb": "^5.5.0",
    "nats": "^2.7.1",
    "node-device-detector": "^2.0.13",
    "normalize-strings": "^1.1.1",
    "querystring": "^0.2.1",
    "secure-pin": "^1.0.14",
    "uniqid": "^5.4.0",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1",
    "xml2js": "^0.5.0"
  },
  "engines": {
    "node": ">= 16.x.x"
  },
  "jest": {
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "rootDir": "./services",
    "roots": [
      "../test"
    ]
  }
}
