generator client {
  provider = "prisma-client-js"
 // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  createdAt DateTime @default(now())
}

model Contact {
  id        Int      @id @default(autoincrement())
  fullName  String
  email     String
  subject   String
  message   String
  createdAt DateTime @default(now())
}


model Hotel {
  id              Int      @id @default(autoincrement())
  hotel_id        String   @unique
  name            String
  coverImageUrl   String
  description     String

  // üïí Check-in / Check-out
  check_in        String
  check_out       String

  // üèôÔ∏è Optional location breakdown
  city            String
  address         String
  latitude        Float?
  longitude       Float?

  // üß≥ Complex JSON fields
  location        Json?      // Full location object { city, address, latitude, longitude }
  images          Json?      // Array of image objects
  rooms           Json?      // Array of room objects
  facilities      Json?      // Array of facilities
  dining          Json?      // Array of dining options
  policies        Json?      // Object with pet/smoking/loudmusic/alcohol booleans
  contact         Json?      // Object with phone, website, etc.

  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
}
