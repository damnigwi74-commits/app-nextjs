        "validation"     : [
            {
                "name"   : "isNumber",
                "type"   : "joi"
            }
        ],
        
        "error"          : "electricity-prepaid-credit-account-error",
        "previous"       : "bill-payment-page",
		"next"           : "electricity-prepaid-amount"
	},
    {
        "type"           : "input",
        "name"           : "electricity-prepaid-amount",
